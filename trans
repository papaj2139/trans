#!/bin/bash

BLUE='\033[38;2;91;206;250m'    
PINK='\033[38;2;255;105;180m'   
WHITE='\033[38;2;255;255;255m' 
RESET='\033[0m'     

BIG_FLAG() {
    echo -e "${BLUE}████████████████████████████████████████████████"
    echo -e "${BLUE}████████████████████████████████████████████████"
    echo -e "${BLUE}████████████████████████████████████████████████"
    echo -e "${BLUE}████████████████████████████████████████████████"
    echo -e "${PINK}████████████████████████████████████████████████"
    echo -e "${PINK}████████████████████████████████████████████████"
    echo -e "${PINK}████████████████████████████████████████████████"
    echo -e "${WHITE}████████████████████████████████████████████████"
    echo -e "${WHITE}████████████████████████████████████████████████"
    echo -e "${WHITE}████████████████████████████████████████████████"
    echo -e "${PINK}████████████████████████████████████████████████"
    echo -e "${PINK}████████████████████████████████████████████████"
    echo -e "${PINK}████████████████████████████████████████████████"
    echo -e "${BLUE}████████████████████████████████████████████████"
    echo -e "${BLUE}████████████████████████████████████████████████"
    echo -e "${BLUE}████████████████████████████████████████████████"
    echo -e "${BLUE}████████████████████████████████████████████████"
    echo -e "${RESET}"
}

SMALL_FLAG() {
    FLAG="
    ${BLUE}███████████████████████████████████████
    ${BLUE}███████████████████████████████████████
    ${BLUE}███████████████████████████████████████
    ${PINK}███████████████████████████████████████
    ${PINK}███████████████████████████████████████
    ${WHITE}███████████████████████████████████████
    ${WHITE}███████████████████████████████████████
    ${PINK}███████████████████████████████████████
    ${PINK}███████████████████████████████████████
    ${BLUE}███████████████████████████████████████
    ${BLUE}███████████████████████████████████████
    ${BLUE}███████████████████████████████████████
    ${RESET}
    "
    echo -e "$FLAG"
}

if [[ "$1" == "big" ]]; then
    BIG_FLAG
else
    SMALL_FLAG
fi

